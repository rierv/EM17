<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="em17.gui.alleventsstats.AllEventsStatsScreenAdapter">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="45.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="45.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="All events statistics" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
        <BarChart fx:id="customersByAgeBarChart" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <xAxis>
                <CategoryAxis fx:id="customerByAgeCategoryAxis" side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="customersByAgeNumberAxis" side="LEFT" />
            </yAxis>
            <GridPane.margin>
                <Insets bottom="16.0" left="32.0" right="32.0" top="16.0" />
            </GridPane.margin>
        </BarChart>
        <BarChart fx:id="soldTicketsByPriceRangeChart" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <xAxis>
                <CategoryAxis fx:id="soldTicketsByPriceRangeCategoryAxis" side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="soldTicketsByPriceRangeNumberAxis" side="LEFT" />
            </yAxis>
            <GridPane.margin>
                <Insets bottom="16.0" left="32.0" right="32.0" top="16.0" />
            </GridPane.margin>
        </BarChart>
        <PieChart fx:id="soldTicketsByEventTypeChart" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
           <GridPane.margin>
                <Insets bottom="16.0" left="32.0" right="32.0" top="16.0" />
           </GridPane.margin>
        </PieChart>
        <Label fx:id="totalSoldTicketsLabel" text="Label" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
           <GridPane.margin>
                <Insets bottom="16.0" left="32.0" right="32.0" top="16.0" />
           </GridPane.margin>
        </Label>
    </children>
</GridPane>
